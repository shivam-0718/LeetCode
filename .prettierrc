{
    "printWidth": 80,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "arrowParens": "always",
    "overrides": [
        {
            "files": "*.py",
            "options": {
                "tabWidth": 4,
                "singleQuote": false
            }
        },
        {
            "files": "*.java",
            "options": {
                "tabWidth": 4,
                "singleQuote": true
            }
        }
    ]
}
